<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androscan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_dictionary"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".TitleActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_display"
            android:theme="@style/DisplayTheme" >
        </activity>
        <activity
            android:name=".AuthorActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_author" >
        </activity>
        <activity
            android:name=".GenreActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_genre" >
        </activity>
        <activity
            android:name=".ScanActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name=".GoogleActivity"
            android:label="@string/title_activity_google" >
        </activity>
        <activity
            android:name=".BookDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_book_display" >
        </activity>
    </application>

</manifest>